{
	# These thickness settings make sure that we see the whole thin blue 
	# line at the top of the notebook page.
	xthickness = 6
	ythickness = 3
  
	engine "pixmap" 
    {
		# Top tab (current)
		image 
		{
			function = EXTENSION
			state = NORMAL
